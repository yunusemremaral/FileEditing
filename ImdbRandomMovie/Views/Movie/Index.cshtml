@* Views/Movie/Index.cshtml *@
@model IEnumerable<MovieViewModel>

<h1>IMDB Film Listesi</h1>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Film Adı</th>
            <th>Yıl</th>
            <th>Tür</th>
            <th>IMDB Puanı</th>
            <th>Yönetmen</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var movie in Model)
        {
            <tr>
                <td>@movie.PrimaryTitle</td>
                <td>@movie.StartYear</td>
                <td>@movie.Genres</td>
                <td>@(movie.AverageRating?.ToString("0.0") ?? "Puan yok")</td>
                <td>@(movie.Directors ?? "Bilgi yok")</td>
            </tr>
        }
    </tbody>
</table>

<!-- Sayfalama ekleyebiliriz -->
<div class="pagination">
    <a href="/Movie/Index?page=1" class="btn btn-primary">İlk Sayfa</a>
    <a href="/Movie/Index?page=@(ViewBag.CurrentPage + 1)" class="btn btn-primary">Sonraki</a>
</div>